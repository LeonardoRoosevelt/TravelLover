<div class="body">
  <div class="creative_taital">
    <div class="dropdown" style="text-align:right;">
      <i class="dropdown-toggle btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false">
      </i>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/blogs/{{blog.id}}/edit">編輯</a>
        <form action="/blogs/{{blog.id}}?_method=DELETE" method="POST" style="display: inline;"
          onsubmit="return deleteCheckAgain()">
          <button type="submit" class="dropdown-item" style="outline:none;">刪除</button>
        </form>
      </div>
    </div>
    <h1 class="creative_text" style="text-align:center;">{{blog.title}}</h1>
    <p style="color:#050000;text-align:left; overflow-wrap: break-word;" class="mx-5 px-5">{{blog.description}}</p>
    <div class="info row flex" style="justify-content:center;">
      <p class="created_at"><i class="far fa-clock"></i> {{blog.createdAt}}</p>
      {{#if blog.location}}
      <p class="created_location ml-3"><i class="fas fa-map-marker-alt"></i> {{blog.location}}</p>
      {{/if}}
    </div>
  </div>
  <div class="text-center">
    <a class="btn btn-danger pull-center" href="javascript:history.back()">回上一頁</a>
  </div>