<div class=" row mt-5">
  {{#if profile.background}}
  <div class="background" style='background-image:url({{profile.background}})'></div>
  {{else}}
  <div class="background" style='background-image:url(../background/Background.png'></div>
  {{/if}}
  <div class="body col-12">
    <div class="row">
      <div class="col-md-4">
        <img class="card-img rounded-circle img-fluid" alt="avatar" src="{{profile.avatar}}">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4 class="card-title">{{profile.name}}</h4>
          <p class="card-text">{{profile.email}}</p>
          {{#ifUser profile.id user.id}}
          <a href="/users/{{profile.id}}/edit" class="btn btn-primary">edit</a>
          {{/ifUser}}
        </div>
      </div>
    </div>
  </div>
</div>