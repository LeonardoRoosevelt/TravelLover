<div class="body">
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="{{profile.name}}">
    </div>
    <div class="form-group">
      <label for="avatar">Avatar</label>
      <input type="file" class="form-control-file" id="avatar" name="avatar">
    </div>
    <div class="form-group">
      <label for="background">Background</label>
      <input type="file" class="form-control-file" id="background" name="background">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href='/users/{{user.id}}' class="btn btn-danger">Back</a>
  </form>
</div>